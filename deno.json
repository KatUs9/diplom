{
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin",
    "@hono/zod-validator": "npm:@hono/zod-validator",
    "@std/toml": "jsr:@std/toml",
    "@tauri-apps/cli": "npm:@tauri-apps/cli",
    "cheerio": "npm:cheerio",
    "esbuild": "npm:esbuild",
    "hono": "npm:hono",
    "vite": "npm:vite",
    "zod": "npm:zod"
  },
  "tasks": {
    "dev:server": "deno run -A --watch server/main.tsx & deno task build:ui --watch",
    "dev:desktop": "tauri dev",
    "build:server": "deno task build:ui && deno task build:schedule",
    "build:schedule": "deno run -A scripts/build-schedule.ts",
    "build:desktop": "deno compile -A desktop/main.ts",
    "build:ui": "vite build --config vite.config.ui.ts",
    "start:server": "deno run -A server/main.tsx",
    "start:desktop": "deno run -A desktop/main.ts",
    "tauri": "tauri",
    "vite": "vite"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "lib": ["dom", "dom.iterable", "dom.asynciterable", "deno.ns"]
  },
  "nodeModulesDir": "auto"
}
